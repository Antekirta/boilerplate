@require '../../../common/client/stylus/global-variables.styl'

.site-header
  position: fixed
  z-index: 2
  padding-top: $default-padding * 4
  transition: padding $transition-middle
  @media (max-width: $tablet)
    padding-top: $default-padding

  &--scrolled
    padding: 5px 0

  &__row
    align-items: center
    @media (max-width: $phone)
      justify-content: space-between
      align-items: center

  &__logo-container
    @media (max-width: $tablet)
      order: 1
      margin-bottom: $default-padding
    @media (max-width: $phone)
      order: 1

  &__menu-container
    @media (max-width: $tablet)
      order: 2

  &__menu
    text-align: center

  .menu__list
    @media (max-width: $phone)
      position: fixed
      top: 74px
      left: -100vw
      width: 250px
      padding: $default-padding * 2 $default-padding
      border-radius: 0 $border-radius-small $border-radius-small 0
      text-align: left
      transition: $transition-middle
      .menu__item
        display: block
        margin-bottom: $default-padding
    &--opened
      left: 0


  &__hamburger
    display: none
    @media (max-width: $phone)
      display: block
      order: 2

  &__toggle-lang-container
    text-align: right
    @media (max-width: $tablet)
      order: 0
      margin-bottom: $default-padding
      text-align: center
    @media (max-width: $phone)
      order: 0
      text-align: center