mixin icon(name, mod)
    - mod = mod || ''
    svg(class='icon icon-' + name + ' ' + mod)
        use(xlink:href='/images/svg/symbol/sprite.svg#' + name)

mixin list(items)
    ul.menu__list
        each item in items
            li.menu__item
                a.menu__link(href= item.link)= item.name